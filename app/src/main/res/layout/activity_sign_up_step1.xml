<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ebabu.engineerbabu.customview.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/primaryColor"
            android:gravity="center"
            android:padding="5dp"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:edittextfont="Bariol_Regular.otf" />

        <com.ebabu.engineerbabu.customview.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Profile"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            app:edittextfont="Bariol_Regular.otf" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/primaryColor" />

        <com.ebabu.engineerbabu.customview.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Skills"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            app:edittextfont="Bariol_Regular.otf" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/primaryColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:src="@mipmap/add_profile"
                    app:civ_border_color="@color/divider_color"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:src="@mipmap/add_profile"
                    app:civ_border_color="@color/divider_color"
                    app:civ_border_width="1dp" />

            </FrameLayout>

            <com.ebabu.engineerbabu.customview.CustomEditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_line_gray"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="10dp"
                android:hint="Compnay Name"
                android:inputType="textCapWords"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomEditText
                android:id="@+id/et_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line_gray"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="10dp"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomEditText
                android:id="@+id/et_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line_gray"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="10dp"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line_gray"
                android:drawableLeft="@mipmap/mail"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line_gray"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_line_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:showFullName="true"
                    app:defaultNameCode="IN"
                    app:textSize="16sp"
                    app:hideNameCode="true"
                    app:countryPreference="IN,US,GB,AU,NZ,AE"/>

                <com.ebabu.engineerbabu.customview.CustomEditText
                    android:id="@+id/et_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:maxLength="13"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:textColor="@color/primary_text_color"
                    android:textColorHint="@color/divider_color"
                    android:textSize="16sp"
                    app:edittextfont="Bariol_Regular.otf"
                    app:edittextfontHint="Bariol_Regular.otf" />
            </LinearLayout>

            <com.ebabu.engineerbabu.customview.CustomTextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line_gray"
                android:clickable="true"
                android:drawableLeft="@mipmap/city"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:hint="City"
                android:inputType="text"
                android:longClickable="false"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/divider_color"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf"
                app:edittextfontHint="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomTextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/yellow_rounded_corner_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="15dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:edittextfont="Bariol_Regular.otf" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
