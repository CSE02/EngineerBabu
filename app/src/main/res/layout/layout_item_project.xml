<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_rounded_corner_bg"
                android:gravity="center"
                android:orientation="vertical">

                <com.ebabu.engineerbabu.customview.CustomTextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="12"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20sp"
                    app:edittextfont="Bariol_Bold.otf" />

                <com.ebabu.engineerbabu.customview.CustomTextView
                    android:id="@+id/tv_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="May, 2017"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="Bariol_Regular.otf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_color" />

                <com.ebabu.engineerbabu.customview.CustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="OPEN"
                    android:textColor="@color/accentColor"
                    android:textSize="14sp"
                    app:edittextfont="Bariol_Regular.otf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.ebabu.engineerbabu.customview.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="I want to make an application for Android"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    app:edittextfont="Bariol_Bold.otf" />

                <com.ebabu.engineerbabu.customview.CustomTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="4"
                    android:text="I have a website and I want to develop app of similar like this and blah blah blah. I have enough money that I can buy your house twenty times. Just make my project "
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    app:edittextfont="Bariol_Regular.otf" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.ebabu.engineerbabu.customview.CustomTextView
                android:id="@+id/tv_skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/graphic"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Android Studio, GoogleMaps, Networking"
                android:textColor="@color/primaryColor"
                android:textSize="14sp"
                app:edittextfont="Bariol_Regular.otf" />

            <com.ebabu.engineerbabu.customview.CustomTextView
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yellow_rounded_corner_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:edittextfont="Bariol_Regular.otf" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>